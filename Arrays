package com.Prepjava;
import java.util.Arrays;
// starting class to write program within
public class Main {
    //function main to write code
    public static void main(String[] args) {
	// write your code here
        //This method to make array by values length
        int[] rollno=new int[]{9,3,4};
        System.out.println("rollno of students");
        System.out.println(rollno[0]+" "+rollno[1]+" "+rollno[2]);
        //This method to make array by first assigning size then assigning values
        float[] marks=new float[3];
        marks[0]=80;
        marks[1]=85;
        marks[2]=78;
        System.out.println("marks of students");
        System.out.println(marks[0]+" "+marks[1]+" "+marks[2]);
        //arrayname.length here length is one of builtin properties of array in java
        System.out.println("Total students in class: "+rollno.length);
        //sort is function from array class of java
        Arrays.sort(marks);
        System.out.println("Sorted marks list");
        System.out.println(marks[0]+" "+marks[1]+" "+marks[2]);

    }
}
