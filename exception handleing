import java.util.Scanner;

public class Main{
    public static void main(String [] args)
    {
      // this is one method to try and then catch an exception
       try{
           int division=10/0;
       }
       catch(ArithmeticException e)
       {
           System.out.println(e);
       }
       catch(Exception e)
       {
           System.out.println(e);
       }
       
       //or second method is that you can throw the exception 
       throw new ArithmeticException("Can't be divided");
       
    }
}
